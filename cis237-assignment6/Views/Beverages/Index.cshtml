@model IEnumerable<cis237_assignment6.Models.Beverage>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="form-group">
    <fieldset>
        <legend>Search Filter</legend>

        @*Open up a form that will go to the Filter method on the Cars Controller
            with a POST request*@
        @using (
            Html.BeginForm(
            "Filter", // Action method to run
            "Beverages", // Controller that method is on
            FormMethod.Post, // The request method type
            new { @class = "form-inline" } // Add CSS class to form
        ))
        {
            @* Render out the AntiForgery Token for the form*@
            @Html.AntiForgeryToken()

            <label for="name">Name</label>
            @Html.TextBox("name", (string)ViewBag.filterName)
            <label for="pack">Pack</label>
            @Html.TextBox("pack", (string)ViewBag.filterPack)
            <label for="min">Min Price</label>
            @Html.TextBox("min", (string)ViewBag.filterMin)
            <label for="max">Max Price</label>
            @Html.TextBox("max", (string)ViewBag.filterMax)

            <input type="submit" value="filter" class="btn btn-info pull-right" />
        }
    </fieldset>
</div>
<br />
<br />

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.pack)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.active)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.pack)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.active)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                @Html.ActionLink("Details", "Details", new { id = item.id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.id })
            </td>
        </tr>
    }

</table>
